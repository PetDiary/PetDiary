<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/firstView"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/button"/>

        <View
            android:id="@+id/secondView"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_below="@+id/firstView"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="365dp"
            android:background="@drawable/button"/>


        <View
            android:id="@+id/lastView"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_below="@+id/secondView"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@drawable/button"/>


        <!---메인 타임라인화면-->

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_alignBottom="@+id/Profile_image"
            android:layout_toRightOf="@+id/Profile_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="프로필 닉네임"/>

        <Button
            android:id="@+id/onPopupButton"
            android:layout_marginRight="2dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/more"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/Profile_image"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="15dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:civ_border_width="0dp"
            app:civ_border_color="#FF000000"
            android:layout_gravity="center_vertical"
            android:src="@drawable/dog"/>

        <ImageView
            android:layout_marginTop="20dp"
            android:scaleType="fitXY"
            android:id="@+id/main_image"
            android:layout_marginRight="7dp"
            android:layout_marginLeft="7dp"
            android:layout_below="@+id/Profile_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dog"/>

        <TextView
            android:layout_marginRight="7dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="10dp"
            android:id="@+id/main_textView"
            android:layout_centerInParent="true"
            android:layout_below="@id/main_image"
            android:text="강아지와 산책을 했습니다 너무너무 즐거운 산책 내일또 하고시어용ㄴㅇㅇㄴㄴㅇㄴㅇㄴㅇㄴㅇㄴㅇㄴ"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="게시글 내용입니다"/>

        <CheckBox
            android:button="@android:color/transparent"
            android:id="@+id/button1"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            android:layout_below="@id/main_textView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/heart_check"/>

        <Button
            android:id="@+id/button2"
            android:layout_alignBaseline="@+id/button1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="27dp"
            android:layout_toRightOf="@+id/button1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/commnet"/>

        <CheckBox
            android:layout_marginRight="5dp"
            android:layout_marginTop="22dp"
            android:button="@android:color/transparent"
            android:id="@+id/button3"
            android:layout_below="@+id/main_textView"
            android:layout_alignParentRight="true"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/bookmark_check"/>

    </RelativeLayout>


</ScrollView>
