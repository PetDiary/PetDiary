<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight"
    android:orientation="vertical">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:scrollbarAlwaysDrawHorizontalTrack="true">

                <!-- ========================================== profile image -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/profile_imageView"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="30dp"
                    app:cardCornerRadius="100dp"

                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/profile_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/icon_dog_running" />
                </androidx.cardview.widget.CardView>

                <!-- ========================================== profile name -->
                <TextView
                    android:id="@+id/profile_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_toRightOf="@+id/profile_imageView"


                    android:text="코주부"
                    android:textColor="#000000" />

                <!-- ========================================== profile memo -->
                <TextView
                    android:id="@+id/profile_memo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profile_name"
                    android:layout_marginRight="30dp"
                    android:layout_toRightOf="@id/profile_imageView"

                    android:inputType="none"
                    android:text="코댕이 아빠 코주부"
                    android:textColor="#000000"
                    android:textSize="8sp"


                    />
            </RelativeLayout>

            <!-- ========================================== line -->

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fillViewport="true"

                >

                <LinearLayout
                    android:id="@+id/mypage_scroll"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"

                    android:gravity="center"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginHorizontal="10dp"
                        android:backgroundTint="@color/cardview_dark_background"
                        app:cardCornerRadius="100dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:id="@+id/profile_petAddBtn"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@android:drawable/ic_input_add" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginHorizontal="10dp"
                        app:cardCornerRadius="100dp"
                        app:cardElevation="0dp">

<!--                        <ImageView-->
<!--                            android:id="@+id/profile_testBtn1"-->
<!--                            android:layout_width="match_parent"-->
<!--                            android:layout_height="match_parent"-->
<!--                            android:scaleType="centerCrop"-->
<!--                            android:src="@drawable/cat1" -->
<!--                            />-->
                        <TextView
                            android:id="@+id/profile_allBtn"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="All"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:background="@color/colorAccent"
                            />
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginHorizontal="10dp"
                        app:cardCornerRadius="100dp"
                        app:cardElevation="0dp"
                        >

<!--                        <ImageView-->
<!--                            android:layout_width="match_parent"-->
<!--                            android:layout_height="match_parent"-->
<!--                            android:scaleType="centerCrop"-->
<!--                            android:src="@drawable/cat1" />-->
<!--                        <TextView-->
<!--                            android:id="@+id/profile_testBtn1"-->
<!--                            android:layout_width="match_parent"-->
<!--                            android:layout_height="match_parent"-->
<!--                            android:text="강아지"-->
<!--                            android:textAlignment="center"-->
<!--                            android:gravity="center"-->
<!--                            android:background="@color/colorAccent"-->
<!--                            android:hint="강아지"-->
<!--                            />-->
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:autofillHints="강아지"
                            />

                    </androidx.cardview.widget.CardView>


                </LinearLayout>

            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:background="@color/colorPrimaryDark2"
                android:outlineSpotShadowColor="@android:color/holo_blue_dark" />


            <!-- ========================================== images -->

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20dp"
                android:gravity="center"
                android:scrollbars="vertical"
                tools:listitem="@layout/kon_mypage_item"></androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    <!--
    android:verticalSpacing="10dp"
       android:columnWidth="100dp"
       android:horizontalSpacing="10dp"-->

</LinearLayout>