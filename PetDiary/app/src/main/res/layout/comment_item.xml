<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Comment">

    <View
        android:id="@+id/first_Square"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@drawable/button"/>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/Profile_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/dog"
        app:civ_border_color="#FF000000"
        app:civ_border_width="0dp" />

    <TextView
        android:id="@+id/PostText_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Profile_image"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:text="강아지와 산책을 했습니다 너무나 즐거운 하루 또 놀고싶어요 헤헤헤헤헤헤헤헤헤헤헤헤헤헤헤 #즐거워잉"
        android:textColor="#000000"/>




    <TextView
        android:id="@+id/Profile_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/Profile_image"
        android:text="프로필 닉네임"
        android:textColor="#000000" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/CO_Profile_image"
        android:layout_below="@+id/first_Square"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="15dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:civ_border_width="0dp"
        app:civ_border_color="#FF000000"
        android:layout_gravity="center_vertical"
        android:src="@drawable/dog"/>

    <TextView
        android:layout_below="@+id/first_Square"
        android:layout_marginTop="30dp"
        android:id="@+id/CO_Profile_Name"
        android:layout_alignBaseline="@id/CO_Profile_image"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/CO_Profile_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="휘리다"/>

    <TextView
        android:id="@+id/CO_comment_view"
        android:layout_below="@+id/first_Square"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/CO_Profile_Name"
        android:layout_width="match_parent"
        android:textColor="#000000"
        android:layout_height="25dp"
        android:text="댕댕이 너무귀여워요"/>

</RelativeLayout>