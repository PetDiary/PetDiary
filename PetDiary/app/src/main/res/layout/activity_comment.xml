<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Comment">

    <!---댓글창 기본화면-->

    <de.hdodenhof.circleimageview.CircleImageView

        android:id="@+id/Profile_image"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:civ_border_width="0dp"
        app:civ_border_color="#FF000000"
        android:layout_gravity="center_vertical"
        android:src="@drawable/dog"/>


    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/Profile_Name"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/Profile_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="프로필 닉네임"/>

 <TextView
     android:gravity="center"
     android:layout_toRightOf="@+id/Profile_image"
     android:layout_above="@id/Main_line"
     android:layout_centerHorizontal="true"
    android:layout_marginRight="10dp"
     android:layout_marginLeft="10dp"
     android:layout_marginTop="10dp"
     android:hint="게시글 내용"
      android:layout_width="match_parent"
     android:layout_height="match_parent"/>

    <View
        android:id="@+id/Main_line"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/Profile_Name"
        android:background="#000000"/>


    <de.hdodenhof.circleimageview.CircleImageView

        android:id="@+id/input_image"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        app:civ_border_width="0dp"
        app:civ_border_color="#FF000000"
        android:layout_gravity="center_vertical"
        android:src="@drawable/dog"/>

    <EditText
        android:layout_alignParentBottom="true"
        android:id="@+id/text_input"
        android:layout_toRightOf="@+id/input_image"
        android:hint="댓글 입력"

        android:layout_marginLeft="5dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_alignParentRight="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="입력"
        android:layout_alignBaseline="@+id/text_input"/>

    <View
        android:layout_marginBottom="10dp"
        android:id="@+id/Input_line"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_above="@+id/input_image"
        android:background="#000000"/>

</RelativeLayout>